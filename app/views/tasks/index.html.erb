<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if(task.completed) %>
        <input type="checkbox" name="completed" checked />
      <% else %>
       <input type="checkbox" name="completed" />
      <% end %>
      <%=  link_to task.title, task_id_path(task) %>
    </li>
 <% end %>
</ul>
<br>
<%= link_to "+ Add a new task", new_task_path %>

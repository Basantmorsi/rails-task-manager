<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if(task.completed) %>
        <input type="checkbox" name="completed" checked disabled="true" />
      <% else %>
       <input type="checkbox" name="completed" disabled="true"/>
      <% end %>
      <%=  link_to task.title, task_id_path(task) %>
      <%= link_to "Delete task", delete_path(task),
       data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
 <% end %>
</ul>
<br>
<%= link_to "+ Add a new task", new_task_path %>
